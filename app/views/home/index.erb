<html>
<head>
    <title>Rummy</title>
    <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "main" %>
    <%= stylesheet_link_tag "grid" %>
</head>
<body>
<div class="container container_12">
    <div align="center">
        <div class="grid_4">&nbsp;</div>
        <div class="grid_5" align="center"><span class="inner_shadow banner">Rummy</span>
            &nbsp;<span class="inner_shadow" style="color:gray;font-size:23px;">beta</span>
        </div>
        <div class="clear clearfix">&nbsp;</div>

        <div class="grid_4">&nbsp;</div>
        <h3 class="grid_4 inner_shadow" style="color:gray;" align="center">for</h3>

        <div class="clear clearfix">&nbsp;</div>

        <div class="grid_4">&nbsp;</div>
        <div class="grid_4">
            <%= image_tag "icc-worldcup-big.png" %>
        </div>
        <div class="clear clearfix">&nbsp;</div>
        <div class="clear clearfix">&nbsp;</div>
        <div class="clear clearfix">&nbsp;</div>
        <br/>
        <div class="grid_5">&nbsp;</div>
        <div class="grid_1">
            <a href="/auth/facebook">
                <%= image_tag "facebook.png", {:style => "border:0;"} %>
            </a>
        </div>
        <div class="grid_1">
            <a href="/auth/twitter">
                <%= image_tag "twitter.png", {:style => "border:0;"} %>
            </a>
        </div>
    </div>
</div>
</body>
</html>
