<% country_one = @batting_country_one[0].player.country.name
   country_two = @batting_country_two[0].player.country.name %>

<div class="grid_6"><b><%= country_one %></b></div>
<div class="grid_6"><b><%= country_two %></b></div>

<div class="clearfix">&nbsp;</div>

<% @batting_country_one.zip(@batting_country_two).each do |sc1, sc2| %>
    <% if sc1 %>
        <div class="grid_2">&nbsp;<%= sc1.player.short_name %></div>
        <div class="grid_3">&nbsp;<%= sc1.wicket_desc %></div>
        <div class="grid_1">&nbsp;<%= sc1.score %>(<%= sc1.strike_rate %>)</div>
    <% end %>
    <% if sc2 %>
        <div class="grid_2">&nbsp;<%= sc2.player.short_name %></div>
        <div class="grid_3">&nbsp;<%= sc2.wicket_desc %></div>
        <div class="grid_1">&nbsp;<%= sc2.score %>(<%= sc2.strike_rate %>)</div>
    <% end %>
    <div class="clear">&nbsp;</div>
<% end %>

<div class="clearfix">&nbsp;</div>
<div class="grid_6"><%= @mt1.score %>(<%= @mt1.balls %>)</div>
<div class="grid_6"><%= @mt2.score %>(<%= @mt2.balls %>)</div>

<div class="clearfix">&nbsp;</div>
<div class="clearfix">&nbsp;</div>

<% @bowling_country_one.zip(@bowling_country_two).each do |sc1, sc2| %>
    <% if sc1 %>
        <div class="grid_2"><%= sc1.player.short_name %></div>
        <div class="grid_1"><%= sc1.overs %></div>
        <div class="grid_1"><%= sc1.maidens %></div>
        <div class="grid_1"><%= sc1.wickets %></div>
        <div class="grid_1"><%= sc1.runs %>(<%= sc1.economy_rate %>)</div>
    <% end %>
    <% if sc2 %>
        <div class="grid_2"><%= sc2.player.short_name %></div>
        <div class="grid_1"><%= sc2.overs %></div>
        <div class="grid_1"><%= sc2.maidens %></div>
        <div class="grid_1"><%= sc2.wickets %></div>
        <div class="grid_1"><%= sc2.runs %>(<%= sc2.economy_rate %>)</div>
    <% end %>
    <div class="clear">&nbsp;</div>
<% end %>

<div class="clearfix">&nbsp;</div>
<div class="clearfix">&nbsp;</div>

<% @player_points_one.zip(@player_points_two).each do |p1, p2| %>
    <% if p1 %>
        <div class="grid_2"><%= p1.player.short_name %></div>
        <div class="grid_4"><%= p1.points %></div>
    <% end %>
    <% if p2 %>
        <div class="grid_2"><%= p2.player.short_name %></div>
        <div class="grid_4"><%= p2.points %></div>
    <% end %>
    <div class="clear">&nbsp;</div>
<% end %>