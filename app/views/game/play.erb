<div class="container_12">
    <div class="grid_3" align="center"><h3><%= @match.country_one.name %></h3></div>
    <div class="grid_1">&nbsp;</div>
    <div class="grid_3" align="center"><h3><%= @match.country_two.name %></h3></div>
    <div class="clear">&nbsp;</div>

    <% @match.country_one.players.zip(@match.country_two.players).each do |player1, player2| %>
        <div class="grid_3 draggable"><%= player1.display_name %></div>
        <div class="grid_1">&nbsp;</div>
        <div class="grid_3 draggable"><%= player2.display_name %></div>
        <div class="clear">&nbsp;</div>
    <% end %>
    <div class="grid_1">&nbsp;</div>
    <div class="droppable grid_4">x 5</div>
    <div class="clear">&nbsp;</div>
    <div class="grid_2">&nbsp;</div>
    <div class="droppable grid_3">x 4</div>
    <div class="clear">&nbsp;</div>
    <div class="grid_2">&nbsp;</div>
    <div class="droppable grid_3">x 3</div>
    <div class="clear">&nbsp;</div>
    <div class="grid_2">&nbsp;</div>
    <div class="droppable grid_3">x 2</div>
    <div class="clear">&nbsp;</div>
    <div class="grid_2">&nbsp;</div>
    <div class="droppable grid_3">x 1</div>
</div>